<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7CF059">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        app:cardMaxElevation="1dp"
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recyclerView_textPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:paddingRight="2dp"
                android:fontFamily="@font/lato_regular"
                android:layout_gravity="center_vertical"
                android:textColor="#00ba03"
                />

            <ImageView
                android:id="@+id/recyclerView_imagePoints"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                android:layout_toRightOf="@id/recyclerView_textPoints"
                android:tint="#00ba03"/>

            <TextView
                android:id="@+id/recyclerView_textInfo"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/recyclerView_imagePoints"
                android:fontFamily="@font/lato_light"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:text="Nie wiem kurwa zajeb sie to bedzie calkiem ekologiczne"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/recyclerView_imageTick"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>