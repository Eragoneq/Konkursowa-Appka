<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fbffe0">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        app:cardMaxElevation="1dp"
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recyclerView_textAchievementInfo"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/recyclerView_imagePoints"
                android:fontFamily="@font/lato_light"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="60dp"
                android:text="Nie wiem kurwa zajeb sie to bedzie calkiem ekologiczne"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/recyclerView_imageAchievement"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_achievements"
                android:tint="#dbe300"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>